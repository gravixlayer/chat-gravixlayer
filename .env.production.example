# Production Environment Variables for Vercel

# Generate a random secret: https://generate-secret.vercel.app/32 or `openssl rand -base64 32`
AUTH_SECRET=your_production_auth_secret_here

# Gravixlayer API Key (for OpenAI-compatible inference)
GRAVIXLAYER_API_KEY=your_production_gravixlayer_api_key

# Supabase Database Configuration (Production)
SUPABASE_URL=your_production_supabase_url
SUPABASE_ANON_KEY=your_production_supabase_anon_key
POSTGRES_URL=your_production_postgres_connection_string

# Vercel Performance Optimizations
VERCEL_ENV=production
NEXT_RUNTIME=edge
NODE_ENV=production

# Optional: AI Gateway API Key (for Vercel deployments)
AI_GATEWAY_API_KEY=your_ai_gateway_key

# Optional: Vercel Blob Store
BLOB_READ_WRITE_TOKEN=your_blob_token

# Optional: Redis for caching (recommended for production)
REDIS_URL=your_redis_url